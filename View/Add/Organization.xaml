<Window x:Class="CourseWork_DB_ONU.View.Add.Organization"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CourseWork_DB_ONU.View.Add"
        mc:Ignorable="d" FontFamily="JetBrains Mono" ResizeMode="NoResize"
        FontSize="18" Title="Supplier" Height="450" Width="400" 
        Closed="Window_Closed">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <TextBlock Grid.Row="0" Text="Назва:" Margin="10"/>
        <TextBox x:Name="_txtName" Grid.Row="1"
                 Margin="5" VerticalAlignment="Center"
                 HorizontalAlignment="Stretch"/>
        <TextBlock Grid.Row="2" Text="Адреса:" Margin="10"/>
        <TextBox x:Name="_txtAddress" Grid.Row="3"
                 Margin="5" VerticalAlignment="Center"
                 HorizontalAlignment="Stretch"/>
        <TextBlock Grid.Row="4" Text="ПІБ директора:" Margin="10"/>
        <TextBox x:Name="_txtFullNameDirector" Grid.Row="5"
                 Margin="5" VerticalAlignment="Center"
                 HorizontalAlignment="Stretch"/>
        <TextBlock Grid.Row="6" Text="Податковий номер:" Margin="10"/>
        <TextBox x:Name="_txtTaxNumber" Grid.Row="7"
                 Margin="5" VerticalAlignment="Center"
                 HorizontalAlignment="Stretch"/>
        <Button Grid.Row="10" Content="Додати торгову точку"
                Margin="10" VerticalAlignment="Center"
                HorizontalAlignment="Stretch"
                Click="_btnAdd_Click"/>
    </Grid>
</Window>
