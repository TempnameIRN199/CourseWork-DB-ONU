<Window x:Class="CourseWork_DB_ONU.View.Edit.Product"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CourseWork_DB_ONU.View.Edit"
        mc:Ignorable="d" FontFamily="JetBrains Mono" ResizeMode="NoResize"
        FontSize="18"
        Title="Product" Height="200" Width="400" Closed="Window_Closed" Loaded="Window_Loaded">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <TextBlock Grid.Row="0" Text="Назва продукту:" Margin="10"/>
        <TextBox x:Name="_txtName" Grid.Row="1"
                 Margin="5" VerticalAlignment="Center"
                 HorizontalAlignment="Stretch"/>
        <Button Grid.Row="2" Content="Редагувати продукт"
                Margin="10" VerticalAlignment="Center"
                HorizontalAlignment="Stretch"
                Click="_btnEdit_Click"/>
    </Grid>
</Window>
